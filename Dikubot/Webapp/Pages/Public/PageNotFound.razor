@page "/404"
@using Microsoft.AspNetCore.Http
@using System.Net
@inject IHttpContextAccessor _httpContextAccessor

<MudText Typo="Typo.h1" Color="Color.Error" Style="text-align: center;">404 page not found</MudText>
<MudLink Href="/"><MudText Typo="Typo.h2" Style="text-align: center;">Click here to return to base</MudText></MudLink>
<HeadContent>
    <meta name="robots" content="noindex" />
</HeadContent>
@code {
    protected override void OnInitialized()
    {
        if (_httpContextAccessor.HttpContext != null && 
            !_httpContextAccessor.HttpContext.Response.HasStarted)
        {
            _httpContextAccessor.HttpContext.Response.StatusCode = (int) HttpStatusCode.NotFound;
        }
    }
}