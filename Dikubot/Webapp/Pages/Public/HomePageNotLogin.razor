<MudCarousel Class="mud-width-full align-content-center" Style="height:calc( 100vh - 150px );" TData="object" AutoCycle="false">
    @{ var hero1 = new List<(string,string)>() {("Find din forening","/discovery/unions")};}
    <CarouselHeroItem HeaderText="Velkommen til KULIV.dk"
                      BackgroundImageUrl="./images/pexels-buro-millennial-1438072.jpg"
                      ContentText="Her kan du finde en oversigt over foreninger på KU og finde et fælleskab for dig!"
