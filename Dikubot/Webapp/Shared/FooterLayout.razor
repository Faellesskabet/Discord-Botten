@inherits LayoutComponentBase
@using Dikubot.Webapp.Extensions.NavMenu;
@using MudBlazor.ThemeManager



<MudLayout>
    <TopNavMenu App="App"/>
        <MudMainContent Style="padding-right: 0; padding-left: 0">
            <MudContainer Style="@_style">
                @Body
            </MudContainer>
        </MudMainContent>
    <Footer style="margin-top: 16px; min-height: 30vh;"></Footer>
</MudLayout>

@code {

   
    [CascadingParameter] 
    protected App App { get; set; }
    
    [Parameter]
    public string Width { get; set; } = "100";

    [CascadingParameter]
    protected ThemeManagerTheme? ThemeManager { get; set; }

    private string _background => (string)(App.IsDarkMode ? App.ThemeManager.Theme.PaletteDark.Background : App.ThemeManager.Theme.Palette.Background);

    private string _style => $"min-height: 70vh; background-color: {_background}; " +
                             $"padding: 24px 24px;";

}